<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_rv_fruitImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/aguacate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/aguacate"
        tools:text="Aqui la imagen fruit" />

    <TextView
        android:id="@+id/tv_rv_fruitName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/tv_rv_fruitShopName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_rv_fruitPrice"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Aqui el name fruit" />

    <TextView
        android:id="@+id/tv_rv_fruitShopName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_rv_fruitPrice"
        app:layout_constraintTop_toBottomOf="@+id/tv_rv_fruitName"
        tools:text="Aqui el name fruitShop" />

    <TextView
        android:id="@+id/tv_rv_fruitPrice"
        android:layout_width="80dp"
        android:layout_height="36dp"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintStart_toEndOf="@+id/iv_rv_fruitImage"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextSizeCheck"
        tools:text="1.80" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_rv_fruitImage" />

</androidx.constraintlayout.widget.ConstraintLayout>