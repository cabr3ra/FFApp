<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_rv_fruitName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Aqui el fruitname"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_rv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Aqui el price"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_rv_fruitName"/>

    <TextView
        android:id="@+id/tv_rv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Aqui la description"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_rv_price"/>

    <TextView
        android:id="@+id/tv_rv_fruitshop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Aqui el fruitshop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_rv_description"/>


</androidx.constraintlayout.widget.ConstraintLayout>