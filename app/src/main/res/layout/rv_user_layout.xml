<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Otros TextView y elementos -->

    <TextView
        android:id="@+id/tv_rv_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="username"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_rv_password"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tv_rv_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="password"
        app:layout_constraintTop_toTopOf="@id/tv_rv_username"
        app:layout_constraintStart_toEndOf="@id/tv_rv_username"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/tv_rv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="name"
        app:layout_constraintTop_toBottomOf="@+id/tv_rv_username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_rv_surname"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tv_rv_surname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="surname"
        app:layout_constraintTop_toTopOf="@+id/tv_rv_name"
        app:layout_constraintStart_toEndOf="@+id/tv_rv_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/tv_rv_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="email"
        app:layout_constraintTop_toBottomOf="@+id/tv_rv_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_rv_admin"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tv_rv_admin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Admin"
        app:layout_constraintTop_toTopOf="@+id/tv_rv_email"
        app:layout_constraintStart_toEndOf="@+id/tv_rv_email"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/tv_rv_baja"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Baja"
        app:layout_constraintTop_toBottomOf="@+id/tv_rv_admin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Modificar Datos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.938"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_rv_baja" />

</androidx.constraintlayout.widget.ConstraintLayout>
